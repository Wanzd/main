<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pd.it.app.project.IProjectReportDao">

	<sql id="sql$filter">
		<where>
			
			<if test="projectName!=null">and project_name=#{projectName}</if>
			<if test="projectNames!=null">
				and project_name in
				<foreach item="it" collection="projectNames" open="(" separator="," close=")">
					#{it}
				</foreach>
			</if>
		</where>
	</sql>
	
	<select id="ra" resultType="VO">
select t1.project_id as "projectId",
	t1.project_name as "projectName",
	t1.status as "status",
	t1.report as "report"
from app_project_report_t t1
		<include refid="sql$filter"/>
order by t1.build_date desc
	</select>
</mapper>  