<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pd.it.system.lookup.ILookupItemDao">

	<!--cache type="org.mybatis.caches.redis.RedisCache"/-->
	<select id="ra" flushCache="false" useCache="true" resultType="VO">
select id "id",
		<choose>
			<when test="language!=null and language=='CHN'">cn "value"</when>
			<otherwise>en "value"</otherwise>
		</choose>
from sys_lookupitem_t
		<include refid="sql$ra$filter"/>
	</select>
	
	<insert id="cs" >
insert into sys_lookupitem_t(
	type_id,
	id,
	cn,
	en,
	value,
	json_data)
values
		<foreach collection="list" item="it" open="(" separator="," close=")">
	#{it.typeId,jdbcType=VARCHAR},
	#{it.id,jdbcType=VARCHAR},
	#{it.cn,jdbcType=VARCHAR},
	#{it.cn,jdbcType=VARCHAR},
	#{it.cn,jdbcType=VARCHAR},
	#{it.cn,jdbcType=VARCHAR}
		</foreach>
	</insert>
	
	<sql id="sql$ra$filter">
		<where>
			<choose>
				<when test="typeId!=null ||typeId!=''">type_id=#{typeId}</when>
				<otherwise>1=0</otherwise>
			</choose>
		</where>
	</sql>
</mapper>  